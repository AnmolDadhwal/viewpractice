<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        app:cardBackgroundColor="@color/blue">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_120">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"/>
        </com.google.android.material.card.MaterialCardView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:id="@+id/show"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_margin="@dimen/dp_25">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/showatten"
            android:src="@drawable/rounded_article_24"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@color/cardview_shadow_start_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_Attendance"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:id="@+id/mark"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/gold"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_toStartOf="@id/show">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/markatten"
            android:src="@drawable/baseline_calendar_month_24"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@color/cardview_shadow_start_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mark_Attendance"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:id="@+id/hw"
        android:layout_toEndOf="@id/show"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/bluelight"
        app:cardCornerRadius="@dimen/dp_10">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/homework"
            android:src="@drawable/baseline_menu_book_24"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@color/cardview_shadow_start_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homework"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/card1"
        android:layout_below="@id/show"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/gallery"
                android:id="@+id/gallery"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="@dimen/sp_20"
                app:drawableEndCompat="@drawable/baseline_add_photo_alternate_24"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/notice"
                app:drawableEndCompat="@drawable/baseline_email_24"
                android:id="@+id/notice"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_20"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/card1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_10">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_60">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pay_fee"
                android:gravity="center"
                android:textColor="@color/bluelight"
                android:textSize="@dimen/sp_20"
                app:drawableEndCompat="@drawable/rounded_currency_rupee_circle_24"
                android:layout_marginStart="@dimen/dp_20"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/about"
                android:gravity="center"
                android:textColor="@color/gold"
                android:textSize="@dimen/sp_20"
                app:drawableEndCompat="@drawable/rounded_account_circle_24"
                android:layout_marginStart="@dimen/dp_20"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>